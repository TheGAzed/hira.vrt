@page "/Error"
@using System.Diagnostics
@using hiravrt.Controllers

@inject MainController mc

<PageTitle>Error</PageTitle>

@code {
	[Parameter]
	public int ErrorNumber { get; set; }
	[Parameter]
	public string ErrorDescription { get; set; } = "";
	[Parameter]
	public string ErrorFix { get; set; } = "";
}

<article class="article-page" id="error-sub-article">
	<hgroup>
        <h2>[ERROR @ErrorNumber] @ErrorDescription</h2>
        <h3>@ErrorFix</h3>
	</hgroup>
</article>
